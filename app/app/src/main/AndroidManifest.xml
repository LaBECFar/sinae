<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.webgenium.sinae">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:parentActivityName=".MainActivity"
            android:name=".ExperimentoActivity"
            android:label="Experimento" />

        <activity
            android:parentActivityName=".NovoExperimentoOpcoesActivity"
            android:launchMode="singleTop"
            android:name=".NovoExperimentoVideoActivity"
            android:label="Novo Experimento" />

        <activity
            android:parentActivityName=".NovoExperimentoActivity"
            android:launchMode="singleTop"
            android:name=".NovoExperimentoOpcoesActivity"
            android:label="Opções do Experimento" />

        <activity
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"
            android:name=".NovoExperimentoActivity"
            android:label="Novo Experimento"/>

        <activity
            android:name=".MainActivity"
            android:label="Experimentos"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>