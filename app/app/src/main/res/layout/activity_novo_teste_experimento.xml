<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".NovoTesteActivity">


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tempo do Experimento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/tempo_experimento" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_tempo"
            android:background="#EEE"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            style="@style/Widget.AppCompat.EditText"
            android:importantForAutofill="no"
            android:inputType="text" />


        <!-- Frames por segundo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/fps"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_fps"
            android:background="#EEE"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_local_movies_black_24dp"
            style="@style/Widget.AppCompat.EditText"
            android:importantForAutofill="no"
            android:inputType="number" />


    </LinearLayout>


    <!-- Continuar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_video_teste"
            android:textSize="12sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            style="@style/Widget.MaterialComponents.Button"
            android:text="@string/btn_iniciar"
            android:textSize="14sp"
            android:id="@+id/btn_continuar"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>